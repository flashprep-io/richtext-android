<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <io.flashprep.android.richtexteditor.richTextLibrary
        android:id="@+id/richTextEditor"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boldButton"
        android:layout_width="61dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:text="BOLD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.215"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/italicButton"
        android:layout_width="52dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:text="ITALIC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@id/boldButton" />

    <Button
        android:id="@+id/underlineButton"
        android:layout_width="78dp"
        android:layout_height="57dp"
        android:layout_marginBottom="68dp"
        android:text="UNDERLINE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="@id/boldButton" />

    <Button
        android:id="@+id/backgroundColor"
        android:layout_width="67dp"
        android:layout_height="40dp"
        android:layout_marginBottom="324dp"
        android:text="BACKGROUND COLOR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/boldButton" />

    <Button
        android:id="@+id/fontsize"
        android:layout_width="97dp"
        android:layout_height="75dp"
        android:layout_marginBottom="324dp"
        android:text="FONT SIZE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@id/boldButton" />

    <Button
        android:id="@+id/subscriptButton"
        android:layout_width="73dp"
        android:layout_height="51dp"
        android:layout_marginBottom="76dp"
        android:text="SUBSCRIPT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/boldButton" />

    <Button
        android:id="@+id/superscriptButton"
        android:layout_width="55dp"
        android:layout_height="36dp"
        android:layout_marginBottom="156dp"
        android:text="SUPERSCRIPT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/boldButton" />

    <Button
        android:id="@+id/setTextColor"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="228dp"
        android:text="TEXTCOLOR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/boldButton" />

    <Button
        android:id="@+id/addImageButton"
        android:layout_width="57dp"
        android:layout_height="49dp"
        android:layout_marginBottom="228dp"
        android:text="IMAGE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="@id/boldButton" />

    <Button
        android:id="@+id/strikethroughButton"
        android:layout_width="52dp"
        android:layout_height="39dp"
        android:layout_marginBottom="152dp"
        android:text="STRIKETHROUGH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="@id/boldButton" />


</androidx.constraintlayout.widget.ConstraintLayout>